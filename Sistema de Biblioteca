import java.lang.reflect.Array;
import java.util.ArrayList;
public class Biblioteca {

    public static void main(String[] args) {

        ArrayList<String> livros = new ArrayList();

        //Adiciona os livros com o metodo add
        livros.add("A menina que roubava livros - Markus Zusak  2005");
        livros.add("Jurassic Park - Michael Crichton - 1990");
        livros.add("E assim que acaba - Colleen Hoover - 2018");

        //mostra o nome do livro atraves do indice
        for(int i = 0; i < livros.size(); i++); {
            System.out.println(livros.get(2));
        }

        //mostra o indice do livro atraves do nome
        int index = livros.indexOf("E assim que acaba - Colleen Hoover - 2018");
        System.out.println(index);
        }
    }

 
